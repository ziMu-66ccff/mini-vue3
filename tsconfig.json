{
	"compilerOptions": {
		"target": "ESNEXT",
		"strict": true,
		"downlevelIteration": true,
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowJs": true,
		"lib": ["esnext", "dom"],
		"allowSyntheticDefaultImports": true,
		"outDir": "build"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build/**/*"]
}
